@import "../../utils/font.wxss";

page, .index {
  width: 100%;
  height: 100%;
  position: relative;
  /* padding-top: 5px; */
  box-sizing: border-box;
}
.index .search{
  width:100%;
  height: 5%;
  margin-left:5%;
  overflow: hidden;
  padding: 5px 0;
}
.index .search-box{
  width:75%;
  height: 100%;
  float: left;
  padding-left: 10px;
  box-sizing: border-box;
  margin:0 auto;
  border:1px solid rgb(77, 80, 79);
  border-radius: 15px;
}
.index .search-btn{
  width:10%;
  margin-left: 5%;
  float: left;
  color:rgb(77, 80, 79);
}
.index .search-recommend,.index .tips-box{
  position: absolute;
  width:100%;
  height: 95%;
  background-color: white;
  z-index: 100;
  padding:5px 15px;
  box-sizing: border-box;
}

.index .tips-box{
  z-index: 200;
}

.index .tips-box .tip-item{
  display: block;
  width:100%;
  height: 30px;
  margin-left: 10px;
  line-height: 10px;
  font-weight: 600;
}

.index .search-recommend .close-btn{
  position: absolute;
  bottom: 50px;
  left:50%;
  color: rgb(46, 45, 45);
  font-weight: 600;
  transform: translateX(-50%);
}

.index .search-recommend .layer{
  width:100%;
  margin:5px;
  position: relative;
}
.index .layer .title{
  margin:5px 0;
  font-size: 20px;
  font-weight: 600;
  color:rgb(124, 124, 124);
}
.index .layer .change{
  position: absolute;
  right:0;
  top: 5px;
  color:rgb(143, 143, 147);
  font-size: 12px;
}

.index .layer .word-item{
  display: inline-block;
  height: 20px;
  background-color: rgb(239, 239, 244);
  border-radius: 15px;
  line-height: 7px;
  font-size: 13px;
  text-align: center;
  padding:5px 10px;
  margin:5px;
  color:rgb(164, 164, 172);
}
.index .banner-container {
  width: 100%;
  height: 25%;
}

.index .banner-item {
  width: 100%;
  height: 100%;
}

.index .img {
  display: block;
  width: 100%;
  height: 100%;
}

.index .mb {
  width: 100%;
  height:calc(70% - 10px);
  padding-bottom: 40px;
  box-sizing: border-box;
}

.index .mb::after {
  display: block;
  content: '';
  height: 0;
  overflow: hidden;
  clear: both;
}

.index .mb view {
  width: 50%;
  height:50%;
  float: left;
  border: 1px rgb(235, 235, 235) solid;
  box-sizing: border-box;
}

.index .mb text {
  display: block;
  margin-left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: rgb(46, 45, 45);
  margin-bottom: 10px;
}

.index .mb .icon {
  display: block;
  margin-top: 35%;
  font-size: 30px;
  color: rgb(77, 80, 79);
}
