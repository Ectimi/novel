.rank{
  width:100%;
}
.rank .major .major-name{
  width:100%;
  height: 40px;
  background-color: rgb(230, 230, 230);
  line-height: 40px;
  padding-left: 10px;
  box-sizing: border-box;
  color:rgb(84, 85, 85);
}
.rank .major .rank-item{
  width: 100%;
  height: 30px;
  display: flex;
  margin:10px 0;
}

.rank .rank-item .img{
  display: block;
  flex:0 0 30px;
  height: 100%;
  margin-left: 10px;
}

.rank .rank-item .title{
  flex: 1;
  height: 100%;
  margin-left: 10px;
  line-height: 30px;
}