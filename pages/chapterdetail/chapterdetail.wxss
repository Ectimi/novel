@import "../../utils/font.wxss";

.chapter-detail {
  width: 100%;
  height: 100%;
  position: relative;
}

.chapter-detail .box {
  padding-top: 5px;
}

.chapter-detail .box .title {
  width: 100%;
  /* font-size: 18px; */
  min-height: 30px;
  line-height: 30px;
  text-align: center;
  font-weight: 600;
}

.chapter-detail .box .content {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
}

/*------默认主题-------*/

.chapter-detail .default {
  border-bottom: 1px solid rgb(92, 93, 88);
  background-color: rgb(238, 230, 221);
}

.chapter-detail .default .title {
  color: rgb(51, 51, 51);
}

.chapter-detail .default .text {
  font-weight: 600;
  color: rgb(92, 93, 88);
}

/*-----夜间模式----------*/

.chapter-detail .night {
  border-bottom: 1px solid rgb(92, 93, 88);
  background-color: rgb(12, 12, 12);
}

.chapter-detail .night .title {
  color: rgb(136, 136, 136);
}

.chapter-detail .night .text {
  font-weight: 600;
  color: rgb(102, 102, 102);
}

/*------护眼模式-----------*/

.chapter-detail .protect {
  border-bottom: 1px solid rgb(92, 93, 88);
  background-color: rgb(184, 205, 141);
}

.chapter-detail .protect .title {
  color: rgb(12, 46, 16);
}

.chapter-detail .protect .text {
  font-weight: 600;
  color: rgb(47, 78, 41);
}

.chapter-detail .loading {
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: rgb(92, 93, 88);
}

.chapter-detail .mask {
  position: fixed;
  bottom: -240px;
  left: 0;
  width: 100%;
  height: 200px;
}

.chapter-detail .mask .layer-box {
  /* position: relative; */
  width: 100%;
  background-color: rgba(68, 69, 69, 0.8);
}

.chapter-detail .add-shelf {
  width: 100px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: rgba(68, 69, 69, 0.8);
  color: white;
  font-weight: 600;
  position: absolute;
  top: -40px;
  right: 0;
}

.chapter-detail .layer-box .layer {
  display: flex;
}

.chapter-detail .layer>view {
  color: white;
  font-weight: 600;
}

.chapter-detail .layer-one .btn {
  flex: 0 0 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.chapter-detail .layer-one .line {
  position: relative;
  flex: 0 0 60%;
  /* height: 1px; */
  margin-top: 15px;
  border-top: 3px solid rgb(178, 178, 178);
}

.chapter-detail .line .progress {
  position: absolute;
  top: -3px;
  left: 0;
  /* width:50%; */
  border-top: 3px solid rgb(185, 50, 33);
}

.chapter-detail .layer-two>view {
  border: 1px solid rgb(80, 81, 80);
  flex: 0 0 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin: 10px 6%;
}

.chapter-detail .layer-two .selected {
  border: 1px solid rgb(185, 50, 33);
  color: rgb(185, 50, 33);
}

.chapter-detail .layer-three view {
  flex: 0 0 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin: 10px 6%;
}

.chapter-detail .layer-three .catalog {
  color: rgb(168, 168, 168);
}
.chapter-detail .flex-box{
  display: flex;
}
.chapter-detail .scroll-box {
  flex: 1;
}

.chapter-detail .scroll-box .catalog-scroll {
  position: fixed;
  left: -80%;
  top: 0;
  width: 80%;
  background-color: white;
}

::-webkit-scrollbar
{
  width: 0;
  height: 0;
  background-color: transparent;
}

.chapter-detail .catalog-scroll .chapter-text {
  position: relative;
  display: block;
  padding-left: 10px;
  height: 40px;
  width: 100%;
  line-height: 15px;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 1px solid rgb(226, 222, 222);
  color: rgb(171, 171, 171);
  font-size: 14px;
}

.chapter-detail .catalog-scroll text:last-of-type {
  border: 0;
}

.chapter-detail .catalog-scroll .book-name {
  display: block;
  font-weight: 600;
  padding-left: 10px;
  font-size: 17px;
  color: rgb(51, 51, 51);
}

.chapter-detail .catalog-scroll .title {
  display: block;
  padding-left: 10px;
  font-size: 16px;
  color: rgb(171, 171, 171);
}

.chapter-detail .catalog-scroll .current {
  color: rgb(185, 51, 33);
}

.chapter-detail .catalog-scroll .icon {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
}
