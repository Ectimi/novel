.classify{
  padding-bottom: 40px;
}
.classify .category-section{
  width:100%;

}

.classify .category-major{
  display: block;
  text-align: center;
  color: rgb(153, 153, 153);
   height: 30px;
  line-height: 30px;
}

.classify .category-item{
  display: block;
  width:33%;
  float: left;
  text-align: center;
  height: 50px;
  line-height: 25px;

}
.classify .category-list{
  border-bottom: 1px rgb(212, 207, 207) solid;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.category-section:last-of-type .category-list{
  border: 0;
}

.classify .category-list::after{
  display: block;
  content: '';
  height: 0;
  overflow: hidden;
  clear: both;
}
.classify .category-item .name{
  color:rgb(51, 51, 51);
  font-weight: 600;
}
.classify .category-item .count{
  font-size: 14px;
  color:rgb(136, 133, 133);
}